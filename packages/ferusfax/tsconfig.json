{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "src", // root of your "paths" below. Required if "paths" is defined
    "paths": {
      "@services/*": ["services/*"], // enables us to use @components/MyComponent
      "@screen/*": ["screen/*"],
      "@repository/*": ["infrastructure/repositories/*"],
      "@controller/*": ["controller/*"]
    }
  },
  "include": ["./src"]
}
